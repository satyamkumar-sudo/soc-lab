{
  "uid": "live-log-explorer",
  "title": "Live Log Explorer",
  "timezone": "utc",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "tags": ["soc-lab", "logs"],
  "templating": {
    "list": [
      {
        "name": "DS_CLICKHOUSE",
        "type": "datasource",
        "label": "ClickHouse",
        "query": "grafana-clickhouse-datasource",
        "current": { "text": "ClickHouse", "value": "ClickHouse" }
      }
    ]
  },
  "panels": [
    {
      "type": "table",
      "title": "Raw Logs (last 30m)",
      "gridPos": { "h": 22, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT timestamp, project, cluster, namespace, pod, service, severity, user, method, ip, resource,\n       substring(toJSONString(payload), 1, 500) AS payload\nFROM soc.raw_logs\nWHERE $__timeFilter(timestamp)\nORDER BY timestamp DESC\nLIMIT 200"
        }
      ]
    }
  ]
}

