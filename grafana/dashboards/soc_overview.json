{
  "uid": "soc-overview",
  "title": "SOC Overview",
  "timezone": "utc",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["soc-lab"],
  "templating": {
    "list": [
      {
        "name": "DS_CLICKHOUSE",
        "type": "datasource",
        "label": "ClickHouse",
        "query": "grafana-clickhouse-datasource",
        "current": { "text": "ClickHouse", "value": "ClickHouse" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Ingested Logs (raw_logs)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT toStartOfMinute(timestamp) AS time, count() AS value\nFROM soc.raw_logs\nWHERE $__timeFilter(timestamp)\nGROUP BY time\nORDER BY time"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5m Error Rate (mv_error_rate_5m)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT window_start AS time,\n       if(total_logs = 0, 0, error_logs / total_logs) AS value\nFROM soc.mv_error_rate_5m\nWHERE $__timeFilter(window_start)\nORDER BY time"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" } }
    },
    {
      "type": "stat",
      "title": "Anomalies (last 24h)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT count() AS value\nFROM soc.anomalies\nWHERE window >= now() - INTERVAL 24 HOUR"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Rule Matches (last 24h)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT count() AS value\nFROM soc.rule_matches\nWHERE window >= now() - INTERVAL 24 HOUR"
        }
      ]
    },
    {
      "type": "table",
      "title": "Latest Anomalies",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT *\nFROM (\n  SELECT created_at, window, project, cluster, namespace, service, risk_level, score, confidence, model, reason\n  FROM soc.anomalies\n  ORDER BY created_at DESC\n  LIMIT 50\n)\nORDER BY created_at ASC"
        }
      ]
    },
    {
      "type": "table",
      "title": "Latest Rule Matches",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "grafana-clickhouse-datasource", "uid": "${DS_CLICKHOUSE}" },
      "targets": [
        {
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT *\nFROM (\n  SELECT created_at, window, project, cluster, namespace, service, rule_id, severity, rule_name, description\n  FROM soc.rule_matches\n  ORDER BY created_at DESC\n  LIMIT 50\n)\nORDER BY created_at ASC"
        }
      ]
    }
  ]
}

